<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_menu"
    android:orientation="vertical"
    android:padding="15dp"
    tools:context=".FourActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/custom_text"
        android:text="@string/fourth_question"
        android:textSize="50sp"
        android:gravity="center"
        android:fontFamily="@font/bangersregular"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <Button
            android:id="@+id/true_four"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:text="@string/option_true"
            android:background="@drawable/custom_button_green"
            android:fontFamily="@font/bangersregular"
            android:textSize="20sp"/>

        <Button
            android:id="@+id/false_four"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:text="@string/option_false"
            android:background="@drawable/custom_button"
            android:fontFamily="@font/bangersregular"
            android:textSize="20sp"/>

    </LinearLayout>

</LinearLayout>